<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="file:../lib/olac-filter.rnc" type="compact"?>
<olac-filter>
    <header xmlns:dc="http://purl.org/dc/elements/1.1/">
        <dc:title>Default OLAC filter</dc:title>
        <dc:contributor>Chris Hirt</dc:contributor>
        <dc:date>7 August 2009</dc:date>
        <dc:description>Default: Retains all records. Nothing is filtered</dc:description>
    </header>
    <reject-rules> </reject-rules>
    <retain-rules>
        <test name="olac language AND type">
            <dc-element tag="dc:subject">
                <type test="equals">
                    <text>olac:language</text>
                    <text>dcterms:ISO639-2</text>
                </type>
            </dc-element>
            <dc-element tag="dc:type">
                <type test="starts-with">
                    <text>olac</text>
                    <!-- e.g. linguistic type or
            discourse type -->
                </type>
            </dc-element>
        </test>
        
        <test name="olac language AND subject">
            <dc-element tag="dc:subject">
                <type test="equals">
                    <text>olac:language</text>
                    <text>dcterms:ISO639-2</text>
                </type>
            </dc-element>
            <dc-element tag="dc:subject">
                <type test="starts-with">
                    <text>olac</text>
                    <!-- e.g. linguistic field -->
                </type>
            </dc-element>
        </test>
    </retain-rules>
</olac-filter>
